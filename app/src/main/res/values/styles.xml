<resources>

    <style name="spinnerItemStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">@dimen/min_height_for_accessibility</item>
        <item name="android:textColorHint">?attr/colorControlNormal</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:minHeight">@dimen/min_height_for_accessibility</item>
        <item name="android:padding">@dimen/text_margin</item>
    </style>

    <style name="textInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">@dimen/text_margin</item>
        <item name="android:paddingStart">@dimen/text_margin</item>
        <item name="android:paddingEnd">@dimen/text_margin</item>
        <item name="android:textColorHint">?attr/colorControlNormal</item>
    </style>

</resources>
