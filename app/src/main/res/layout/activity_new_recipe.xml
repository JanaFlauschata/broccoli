<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="org.flauschhaus.broccoli.ui.recipes.NewRecipeViewModel" />
        <variable name="presenter" type="org.flauschhaus.broccoli.ui.recipes.NewRecipeActivity" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.recipes.NewRecipeActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:layout_scrollFlags="noScroll"
                app:title="@string/title_activity_new_recipe"
                app:navigationIcon="@drawable/ic_close_24dp">

                <Button
                    android:id="@+id/button_save_recipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/action_save"
                    android:layout_gravity="end"
                    android:onClick="@{() -> presenter.onSaveClick(viewModel.recipe)}" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/new_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_bar_height"
                    android:background="@color/placeholder"
                    android:src="@drawable/placeholder_list"
                    android:scaleType="centerCrop"
                    android:onClick="@{() -> presenter.onImageClick()}"
                    app:imageName="@{viewModel.recipe.imageName}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/new_image"
                    android:layout_alignEnd="@+id/new_image"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_photo_camera_24dp"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/new_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/hint_new_recipe_title"
                    android:text="@={viewModel.recipe.title}"/>

                <EditText
                    android:id="@+id/new_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:maxLines="10"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/hint_new_recipe_description"
                    android:gravity="top"
                    android:text="@={viewModel.recipe.description}"/>

                <EditText
                    android:id="@+id/new_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:maxLines="10"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/hint_new_recipe_ingredients"
                    android:gravity="top"
                    android:text="@={viewModel.recipe.ingredients}"/>

                <EditText
                    android:id="@+id/new_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:maxLines="10"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/hint_new_recipe_instructions"
                    android:gravity="top"
                    android:text="@={viewModel.recipe.instructions}"/>

            </LinearLayout>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>