<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable name="instruction" type="org.flauschhaus.broccoli.recipes.instructions.Instruction" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/instruction_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_circle_24dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/primary_text_dark"
            android:gravity="center"
            android:text="@{String.valueOf(instruction.position)}"/>

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{instruction.text}"/>

    </LinearLayout>

</layout>