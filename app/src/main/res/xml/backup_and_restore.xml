<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="backup-category"
        app:title="@string/backup">

        <Preference
            app:icon="@drawable/ic_backup_24dp"
            app:key="backup"
            app:summary="@string/backup_recipes_message"
            app:title="@string/backup_recipes" />

        <EditTextPreference
            app:key="last-backup-date"
            app:title="@string/backup_last_backup"
            app:selectable="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="restore-category"
        app:title="@string/restore">

        <Preference
            app:icon="@drawable/ic_backup_restore_24dp"
            app:key="restore"
            app:summary="@string/restore_recipes_message"
            app:title="@string/restore_recipes" />

    </PreferenceCategory>

</PreferenceScreen>