<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.flauschhaus.broccoli">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
            <data android:mimeType="image/*" />
        </intent>
    </queries>

    <application
        android:name=".BroccoliApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="org.flauschhaus.broccoli.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".recipe.details.RecipeDetailsActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.flauschhaus.broccoli.MainActivity" />
        </activity>

        <activity
            android:name=".recipe.crud.CreateAndEditRecipeActivity"
            android:label="@string/title_activity_new_recipe"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarPrimaryDarkStatusBar"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />

        <activity android:name=".recipe.cooking.CookingModeActivity"
            android:label="@string/title_activity_cooking_mode"
            android:parentActivityName=".recipe.details.RecipeDetailsActivity" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>